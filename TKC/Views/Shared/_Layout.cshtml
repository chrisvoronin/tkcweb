<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css?v=1.6">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>

    <!-- scroll button -->
    <button type="button"
            class="btn btn-danger btn-floating btn-lg"
            id="btn-back-to-top">
        <img src="/img/scrool.svg" alt="">
    </button>
    <!-- end scroll button -->

    <!-- Header section Start -->
    <header class="header_section">
        <div class="container">
            <nav class="navbar navbar-expand-lg">
                <a class="navbar-brand" href="/">
                    <div class="img_logo">
                        <img src="/img/logo.svg" alt="">
                    </div>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <div class="nav_icons">
                        <img class="ham_icon" src="/img/hamburger.svg" alt="">
                        <img class="cross_icon" src="/img/cross.svg" alt="">
                    </div>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Home" asp-action="Resources">Resources</a>
                        </li>
                    </ul>
                    <a class="contact_btn" asp-controller="Home" asp-action="Contact">Contact us</a>
                </div>
            </nav>
        </div>
    </header>
    <!-- Header section End -->

    <!-- Body Section Start -->
    @RenderBody()
    <!-- Body Section End -->

    <!-- footer section start -->
    <footer class="footer_section">
        <div class="container">
            <div class="inner_footer">
                <div class="footer_img">
                    <img src="/img/footer.svg" alt="">
                </div>
                <div class="footer_content">
                    <ul>
                        <li class="footer_link"><a asp-controller="Sermons" asp-action="Index">Sermons</a></li>
                        <li class="footer_link"><a asp-controller="Music" asp-action="Index">Music</a></li>
                        <li class="footer_link"><a asp-controller="ShortTakes" asp-action="Index">ShortTakes</a></li>
                        <li class="footer_link"><a asp-controller="Home" asp-action="Liturgy">Liturgy</a></li>
                    </ul>
                </div>
                <div class="footer_content">
                    <ul>
                        <li class="footer_link"><a asp-controller="Home" asp-action="About">About</a></li>
                        <li class="footer_link"><a asp-controller="Home" asp-action="Staff">Staff</a></li>
                        <li class="footer_link"><a href="https://www.youtube.com/@@thekingscongregation5213/streams">Livestream</a></li>
                        <li class="footer_link"><a asp-controller="Home" asp-action="Index">Confession of Faith</a></li>
                        <li class="footer_link"><a asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer_copyright">
                <h4>
                    &copy; 2023 The King’s Congregation. All Rights Reserved.
                    <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    &nbsp;&nbsp;<a asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                </h4>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
            crossorigin="anonymous"></script>
    <script src="/js/main.js?v=1.1"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

