@{
    ViewData["Title"] = "The Kings Congregation";
}

<style type="text/css">
    .services_section span {
        text-align: left;
        margin-bottom: 16px;
    }
</style>
<section class="contact_section">
    <div class="container editor" contentid="8">
        @await Component.InvokeAsync("HtmlContent", new { contentid = 8 })
    </div>
</section>

<section class="services_section">
    <div class="container">
        <div class="inner_services editor" contentid="7">
            @await Component.InvokeAsync("HtmlContent", new { contentid = 7 })
        </div>
    </div>
</section>
<script type="text/javascript">

    function validateForm() {

        var isValid = true;

        var name = $("#name").val().trim();
        var email = $("#email").val().trim();
        var message = $("#message").val().trim();

        if (name.length == 0) {
            $("#name").addClass("error");
            isValid = false;
        } else {
            $("#name").removeClass("error");
        }

        if (email.length == 0) {
            $("#email").addClass("error");
            isValid = false;
        } else {
            $("#email").removeClass("error");
        }

        if (message.length == 0) {
            $("#message").addClass("error");
            isValid = false;
        } else {
            $("#message").removeClass("error");
        }

        return isValid;
    }

    function submitEmailForm() {

        var isValid = validateForm();
        if (!isValid) {
            return;
        }

        var formData = {
            name: $("#name").val().trim(),
            email: $("#email").val().trim(),
            message: $("#message").val().trim()
        };

        $("#contactform").hide();
        $("#sending").show();

        $.ajax({
            type: "POST",
            url: "/Contact",
            data: formData,
            success: function (response) {
                
                $("#sending").hide();
                $("#sent").show();

            },
            error: function (error) {

                $("#sending").hide();
                $("#contactform").show();
                alert("Unable to send message.");

            }
        });
    }
</script>